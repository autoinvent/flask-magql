[flake8]
extend-select =
    # bugbear
    B
    # bugbear opinions
    B9
    # implicit str concat
    ISC
extend-ignore =
    # slice notation whitespace, invalid
    E203
    # line length, handled by bugbear B950
    E501
    # bare except, handled by bugbear B001
    E722
    # string format quote opinion
    B907
# up to 88 allowed by bugbear B950
max-line-length = 80
